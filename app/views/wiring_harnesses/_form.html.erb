
<%= simple_form_for(@wiring_harness, html: {data: {turbo:false}}) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :company %>
    <%= f.input :weekly_quota %>
    <%= f.input :harnesses_completed %>
    <%= f.association :user, label_method: :full_name, value_method: :id %>
    
    <%# <%= f.input :components, as: :select, collection: WiringHarness.components %>
  </div>

  <div class="form-actions float-end">
    <%= f.button :submit %>
    <%= link_to "Cancel", wiring_harnesses_path, class: "btn btn-secondary" %>
  </div>
<% end %>
