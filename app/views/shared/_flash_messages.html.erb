<% flash.each do |flash_type, message| %>
  <div 
    class="alert toast-container position-fixed bottom-0 end-0 p-3 m-4 alert-<%= flash_type == "notice" ? 'success' : 'danger' %>",
    data-controller="removals",
    data-action='load@window->removals#connect',
    data-removals-target='alert'
  >
    <%= message %>
  </div>
<% end %>